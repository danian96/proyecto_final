<%= form_with url: home_change_perm_path , local: true, html: {class: "form-horizontal"} do |form| %>

<div class="form-group">
  <%= form.label :user_id , "Usuario :" ,class: "col-lg-2 control-label"%>
  <div class="col-lg-10">
      <%= form.collection_select(:user_id, User.all, :id, :email, {hide_label: true}, class: "form-control") %>
  </div>
</div>

<div class="form-group">
  <%= form.label :permission , "Rol :",class: "col-lg-2 control-label"%>
  <div class="col-lg-10">
    <%= form.select(:permission, [['SuperAdmin', 'superadmin'], ['Admin', 'admin'], ['Supervisor', 'supervisor'], ['Gerente', 'gerente'], ['Empleado', 'empleado'], ['Postulante', 'postulante']], {include_blank: "Selecciona.."}, {:class=>"form-control"})%>
  </div>
</div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <div class="actions">
        <%= form.submit "Guardar", class:"btn btn-sm btn-white" %>
        <%= link_to 'Atras', authenticated_root_path , class:"btn btn-sm btn-white"%>
      </div>
    </div>
  </div>
<% end %>
