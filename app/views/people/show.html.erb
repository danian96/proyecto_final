<br>
<div class="col-lg-12">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h5>Perfil</h5>
        </div>
        <div class="ibox-content">
          <p id="notice"><%= notice %></p>

          <p>
            <strong>Nombre :</strong>
            <%= @person.name %>
          </p>

          <p>
            <strong>Apellido :</strong>
            <%= @person.last_name %>
          </p>

          <p>
            <strong>Fecha de Nacimiento :</strong>
            <%= @person.birthday %>
          </p>

          <p>
            <strong>Sexo :</strong>
            <%= @person.sex %>
          </p>

          <p>
            <strong>CI:</strong>
            <%= @person.ci %>
          </p>

          <p>
            <strong>Direccion :</strong>
            <%= @person.address %>
          </p>

          <p>
            <strong>Numero de telefono o celular :</strong>
            <%= @person.cellphone %>
          </p>

          <p>
            <strong>Estado Civil :</strong>
            <%= @person.civil_state.name %>
          </p>

          <%= link_to 'Editar', edit_person_path(@person) , class:"btn btn-sm btn-white"%>
          <%= link_to 'Atras', authenticated_root_path , class:"btn btn-sm btn-white"%>
        </div>
    </div>
</div>
